<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Q1Fragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#FFFF99">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/q1_text"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="39dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="According to the 80&apos;s rock band Toto, who blessed the rains down in Africa?"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignStart="@+id/btn_q1_submit"
    android:layout_marginStart="48dp"
    android:id="@+id/q1_radio_group">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="God"
            android:id="@+id/god"
            android:checked="false"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/simba"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simba"
            android:id="@+id/simba"
            android:layout_below="@+id/god"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toto"
            android:id="@+id/toto"
            android:checked="false"
            android:layout_below="@+id/simba"
            android:layout_alignParentStart="true"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shaka Zulu"
            android:id="@+id/shaka"
            android:checked="false"
            android:layout_below="@+id/toto"
            android:layout_alignParentStart="true"
            android:textSize="25dp" />
</RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btn_q1_submit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="#33cc33"
            android:layout_margin="10dp" />

    </RelativeLayout>

</FrameLayout>
